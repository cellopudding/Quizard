<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <section class="p-5 m-5">
      <div class="container">
        <div class="row text-center justify-content-center align-items-center">
          <h1 class="logo">Trivia Game</h1>
          <h4>
            Test your knowledge in different categories
            <br />
            while you chat with friends.
          </h4>
          <div class="col-md-6 p-5">
            <div class="card text-light user-card">
              <div class="card-body text-center login-card">
                <div class="h1 mb-3">
                  <!-- <i class="bi bi-emoji-sunglasses"></i> -->
                </div>
                <h3 class="card-title mb-3"></h3>
                <p class="card-text text-dark sign-up">
                  Don't have an account?
                  <a href="./login">Sign up</a>
                </p>
                <form class="login-form text-dark p-3">
                  <div class="form-floating user-input mb-3">
                    <input
                      type="email"
                      class="form-control"
                      id="email-login"
                      aria-describedby="emailHelp"
                      placeholder="Email"
                    />
                    <label for="exampleInputEmail1">Email</label>
                  </div>
                  <div class="form-floating user-input mb-3">
                    <input
                      type="password"
                      class="form-control"
                      id="password-login"
                      placeholder="Password"
                    />
                    <label for="exampleInputPassword1">Password</label>
                  </div>
                  <button type="submit" class="btn btn-dark login-btn">
                    Log in
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="/js/login.js"></script>
  </body>
</html>