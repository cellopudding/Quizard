<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trivia Game Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../public/css/style.css" />
  </head>
  <body>
    <section class="p-5 m-5">
      <div class="container">
        <div class="row text-center justify-content-center align-items-center">
          <h1 class="logo">Trivia Game</h1>
          <h4>
            Test your knowledge in different categories
            <br />
            while you chat with friends.
          </h4>
          <div class="col-md-4 p-5">
            <img
              src="../public/assets/image.png"
              alt="welcome image"
              class="login-image"
            />
          </div>
          <div class="col-md-6 p-5">
            <div class="card text-light user-card">
              <div class="card-body text-center login-card">
                <div class="h1 mb-3">
                  <!-- <i class="bi bi-emoji-sunglasses"></i> -->
                </div>
                <h3 class="card-title mb-3"></h3>
                <p class="card-text text-dark sign-up">
                  Don't have an account?
                  <a href="./login">Sign up</a>
                </p>
                <form class="login-form text-dark p-3">
                  <div class="form-floating user-input mb-3">
                    <input
                      type="email"
                      class="form-control"
                      id="email-login"
                      aria-describedby="emailHelp"
                      placeholder="Email"
                    />
                    <label for="exampleInputEmail1">Email</label>
                  </div>
                  <div class="form-floating user-input mb-3">
                    <input
                      type="password"
                      class="form-control"
                      id="password-login"
                      placeholder="Password"
                    />
                    <label for="exampleInputPassword1">Password</label>
                  </div>
                  <button type="submit" class="btn btn-dark login-btn">
                    Log in
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="../public/js/login.js"></script>
  </body>
</html>