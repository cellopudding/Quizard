<section class="p-5 m-5">
  <div class="container">
    <div class="row text-center g-4 justify-content-center">
      <div class="col-md-5">
        <div class="card bg-dark text-light login-card">
          <div class="card-body text-center">
            <div class="h1 mb-3">
              <i class="bi bi-emoji-sunglasses"></i>
            </div>
            <h3 class="card-title mb-3">Trivia Game</h3>
            <p class="card-text">Sign up to play.</p>
            <form class="signup-form text-dark p-3">
              <div class="form-floating user-input mb-3">
                <input
                  type="email"
                  class="form-control"
                  id="email-signup"
                  aria-describedby="emailHelp"
                  placeholder="Email"
                />
                <label for="exampleInputEmail1">Email</label>
              </div>
              <div class="form-floating user-input mb-3">
                <input
                  type="password"
                  class="form-control"
                  id="password-signup"
                  placeholder="Password"
                />
                <label for="exampleInputPassword1">Password</label>
              </div>
              <button type="submit" class="btn btn-dark login-btn">
                Sign up
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="/js/signup.js"></script>